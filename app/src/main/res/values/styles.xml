<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleableToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorPrimaryDark</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/colorCyan</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@android:color/black</item>
        <item name="stIconStart">@drawable/ic_superman</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">center</item>
        <item name="stRadius">15dp</item>
    </style>

    <style name="primary_dark_bold_caps_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
